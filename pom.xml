						</goals>
					</execution>
				</executions>
			</plugin -->

		</plugins>
	</build>

	<distributionManagement>
		<snapshotRepository>
			<id>ossrh</id>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
		</snapshotRepository>
		<repository>
			<id>ossrh</id>
			<url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
		</repository>
	</distributionManagement>

	<modules>
		<module>core</module>
		<module>suite</module>
		<module>demos</module>
		<module>tools</module>
	</modules>

	<organization>
		<name>The Alexandra Institute</name>
		<url>https://alexandra.dk</url>
	</organization>

</project>
